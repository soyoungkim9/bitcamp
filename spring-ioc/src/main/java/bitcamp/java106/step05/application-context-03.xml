<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <!-- List 프로퍼티 값 설정하기 -->
    <bean id="c1" class="bitcamp.java106.step05.Car3">
        <!-- List 프로퍼티 값 설정하기 : 배열과 똑같이 설정하기 -->
        <property name="options">
			<map>
				<entry>
				<key><value>sunroof</value></key>
				<value>true</value>
				</entry>
				<entry key="auto" value="true"></entry>
				<entry key="spareTire">
					<bean class="bitcamp.java106.step05.Tire" p:maker="비트자타이"/>
				</entry>
				<entry key="engine" value-ref="e1"/>
			</map>
        </property>
    </bean>
    
	<bean id="e1" class="bitcamp.java106.step05.Engine" p:maker="비트자동차"/>    
</beans>






